            "version": ""
        },
        {
            "type": "grafana",
            "id": "grafana",
            "name": "Grafana",
            "version": "12.1.1"
        },
        {
            "type": "datasource",
            "id": "prometheus",
            "name": "Prometheus",
            "version": "1.0.0"
        },
        {
            "type": "panel",
            "id": "timeseries",
            "name": "Time series",
            "version": ""
        }
    ],
    "annotations": {
        "list": [
            {
                "builtIn": 1,
                "datasource": "-- Grafana --",
                "enable": true,
                "hide": true,
                "iconColor": "rgba(0, 211, 255, 1)",
                "name": "Annotations & Alerts",
                "type": "dashboard"
            }
        ]
    },
    "editable": true,
    "fiscalYearStartMonth": 0,
    "graphTooltip": 0,
    "id": null,
    "links": [],
    "panels": [
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                },
                "overrides": []
            },
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 1
            },
            "id": 1,
            "targets": [
                {
                    "expr": "avg(DCGM_FI_DEV_GPU_UTIL{Hostname=~\"${hostname}\", gpu=~\"${gpu}\"})",
                    "interval": "",
                    "legendFormat": "GPU Utilization",
                    "refId": "A"
                }
            ],
            "title": "GPU Utilization (%)",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                },
                "overrides": []
            },
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 1
            },
            "id": 2,
            "targets": [
                {
                    "expr": "100 * sum(DCGM_FI_DEV_FB_USED{Hostname=~\"${hostname}\", gpu=~\"${gpu}\"}) / sum(DCGM_FI_DEV_FB_FREE{Hostname=~\"${hostname}\", gpu=~\"${gpu}\"} + DCGM_FI_DEV_FB_USED{Hostname=~\"${hostname}\", gpu=~\"${gpu}\"})",
                    "interval": "",
                    "legendFormat": "GPU Memory Used (%)",
                    "refId": "A"
                }
            ],
            "title": "GPU Memory Used",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "celsius"
                },
                "overrides": []
            },
            "gridPos": {
                "h": 6,
                "w": 12,
                "x": 0,
                "y": 8
            },
            "id": 3,
            "targets": [
                {
                    "expr": "avg(DCGM_FI_DEV_GPU_TEMP{Hostname=~\"${hostname}\", gpu=~\"${gpu}\"})",
                    "interval": "",
                    "legendFormat": "GPU Temperature",
                    "refId": "A"
                }
            ],
            "title": "GPU Temperature",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                }
            },
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 14
            },
            "id": 4,
            "targets": [
                {
                    "expr": "100 - (avg by (Hostname) (irate(node_cpu_seconds_total{mode=\"idle\"}[1m])) * 100)",
                    "legendFormat": "CPU Usage",
                    "refId": "A"
                }
            ],
            "title": "CPU Usage (%)",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                }
            },
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 12,
                "y": 14
            },
            "id": 5,
            "targets": [
                {
                    "expr": "avg by () (100 * (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)))",
                    "legendFormat": "Memory Usage",
                    "refId": "A"
                }
            ],
            "title": "Memory Usage (%)",
            "type": "timeseries"
        },
        {
            "datasource": {
                "type": "prometheus",
                "uid": "${DS_PROMETHEUS}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            },
            "gridPos": {
                "h": 7,
                "w": 12,
                "x": 0,
                "y": 21
            },
            "id": 6,
            "targets": [
                {
                    "expr": "avg(node_memory_MemFree_bytes)",
                    "legendFormat": "Memory Free",
                    "refId": "A"
                }
            ],
            "title": "Memory Free",
            "type": "timeseries"
        }
    ],
    "schemaVersion": 39,
    "style": "dark",
    "tags": [
        "kubernetes",
        "gpu",
        "ollama"
